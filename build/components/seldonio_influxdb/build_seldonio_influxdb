#!/bin/bash

set -o nounset
set -o errexit
set -o pipefail

STARTUP_DIR="$( cd "$( dirname "$0" )" && pwd )"

DRY_RUN=${DRY_RUN-false}

log() {
    echo "$(date +"%Y%m%d_%H%M%S") $1"
}

#From Env
#${SELDON_SERVER_HOME}

if [ "${DRY_RUN}" = "false" ]; then
    log "[BUILD_EVENT:BEGIN] Building seldonio_influxdb"

    source ${SELDON_SERVER_HOME}/build/build_versions

    cd ${SELDON_SERVER_HOME}/docker/influxdb
    make \
        SELDON_INFLUXDB_IMAGE_VERSION=${SELDON_INFLUXDB_IMAGE_VERSION} \
        build_image
    BUILT_IMAGE=$(docker images|grep 'seldonio/influxdb' | grep ${SELDON_INFLUXDB_IMAGE_VERSION}|awk '{printf "%s:%s",$1,$2}')
    log "[BUILD_EVENT:END] Finished seldonio_influxdb, built[${BUILT_IMAGE}]"
else
    log "[BUILD_EVENT:BEGIN] [DRY_RUN] Building seldonio_influxdb"
    log "[BUILD_EVENT:END] [DRY_RUN] Finished seldonio_influxdb"
fi

