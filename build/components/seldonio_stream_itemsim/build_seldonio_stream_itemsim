#!/bin/bash

set -o nounset
set -o errexit
set -o pipefail

STARTUP_DIR="$( cd "$( dirname "$0" )" && pwd )"

DRY_RUN=${DRY_RUN-false}

ts() {
    date +"%Y%m%d_%H%M%S"
}

log() {
    echo "$(ts) $1"
}

#From Env
#${SELDON_SERVER_HOME}

if [ "${DRY_RUN}" = "false" ]; then
    log "[BUILD_EVENT:BEGIN] Building seldonio_stream_itemsim"

    source ${SELDON_SERVER_HOME}/build/build_versions_generated

    cd ${SELDON_SERVER_HOME}/docker/stream-itemsim
    make clean
    make \
        SELDON_STREAM_BUILD_IMAGE_VERSION=${SELDON_STREAM_BUILD_IMAGE_VERSION} \
        SELDON_STREAM_ITEMSIM_IMAGE_VERSION=${SELDON_STREAM_ITEMSIM_IMAGE_VERSION} \
        SELDON_STREAM_VERSION=${SELDON_STREAM_VERSION} \
        build_image
    make clean

    BUILT_IMAGE=$(docker images|grep seldonio/seldon-stream-itemsim|grep ${SELDON_STREAM_ITEMSIM_IMAGE_VERSION}|awk '{printf "%s:%s",$1,$2}')
    log "[BUILD_EVENT:END]  Finished seldonio_stream_itemsim, built[$BUILT_IMAGE]"
else
    log "[BUILD_EVENT:BEGIN] [DRY_RUN] Building seldonio_stream_itemsim"
    log "[BUILD_EVENT:END] [DRY_RUN] Finished seldonio_stream_itemsim"
fi


