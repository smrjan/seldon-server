#!/bin/bash

set -o nounset
set -o errexit
set -o pipefail

STARTUP_DIR="$( cd "$( dirname "$0" )" && pwd )"

DRY_RUN=${DRY_RUN-false}

ts() {
    date +"%Y%m%d_%H%M%S"
}

log() {
    echo "$(ts) $1"
}

#From Env
#${SELDON_SERVER_HOME}

if [ "${DRY_RUN}" = "false" ]; then
    log "[BUILD_EVENT:BEGIN] Building seldonio_iris_keras"

    source ${SELDON_SERVER_HOME}/build/build_versions_generated

    cd ${SELDON_SERVER_HOME}/docker/examples/iris/keras
    make clean

    make \
        SELDON_PYTHON_PACKAGE_VERSION=${SELDON_PYTHON_PACKAGE_VERSION} \
        SELDON_IRIS_KERAS_IMAGE_VERSION=${SELDON_IRIS_KERAS_IMAGE_VERSION} \
        build_image

    BUILT_IMAGE=$(docker images|grep seldonio/iris_keras|grep ${SELDON_IRIS_KERAS_IMAGE_VERSION}|awk '{printf "%s:%s",$1,$2}')
    log "[BUILD_EVENT:END] Finished seldonio_iris_keras, built[$BUILT_IMAGE]"
else
    log "[BUILD_EVENT:BEGIN] [DRY_RUN] Building seldonio_iris_keras"
    log "[BUILD_EVENT:END] [DRY_RUN] Finished seldonio_iris_keras"
fi

